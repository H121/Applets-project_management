/* miniprogram/pages/message/message.wxss */
.projectContainer{
  padding-top: 20rpx;
  height: calc(100vh - 100rpx);
}
.item-list{
  position: relative;
  width: 100%;
  height: 90rpx;
  margin-left: 20rpx;
}
.item-info, .item-oper{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}
.item-info{
  display: flex;

  z-index: 2;
  background: white;
  transition: left 0.2s ease-in-out;
}
.item-list:first-child{
  border-top: 1px solid #ccc;
}
.item-oper{
  display: flex;
  justify-content: flex-end;
}
.oper-delete{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: red;
}
.info-img{
  width: 80rpx;
  height: 80rpx;
  margin-top: 5rpx;
  border-radius: 10%;
}
.info-wrapper{
  margin-left: 20rpx;
  width: 588rpx;
}
.info-desc{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 6rpx;
}

.info-desc .name{
  font-size: 32rpx;
  color: black;
  font-weight: 600;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.info-desc .time{
  font-size: 24rpx;
  color: #999;
}
.info-content{
  font-size: 28rpx;
  color: #999;
  margin-top: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
