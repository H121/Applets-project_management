/* miniprogram/pages/task/task.wxss */
.projectContainer{
  padding-top: 20rpx;
  height: calc(100vh - 100rpx);
}
.item-list{
  position: relative;
  width: 100%;
  height: 90rpx;
  margin-left: 20rpx;
}
.item-info, .item-oper{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}
.item-info{
  display: flex;

  z-index: 2;
  background: white;
  transition: left 0.2s ease-in-out;
}
.item-list:first-child{
  border-top: 1px solid #ccc;
}
.item-oper{
  display: flex;
  justify-content: flex-end;
}
.oper-delete{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: red;
}
.info-img{
  width: 80rpx;
  height: 80rpx;
  margin-top: 5rpx;
  border-radius: 10%;
}
.info-wrapper{
  margin-left: 20rpx;
  width: 588rpx;
}
.info-desc{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 6rpx;
}

.info-desc .name{
  font-size: 32rpx;
  color: black;
  font-weight: 600;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.info-desc .time{
  font-size: 24rpx;
  color: #999;
}
.info-content{
  font-size: 28rpx;
  color: #999;
  margin-top: 4rpx;
}
.bottom_button{
  width:10%;
  height: 50rpx;
  line-height: 50rpx;
  color: white;
  position:fixed;
  bottom:0;
  right: 0;
  background: blue;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 100%;
  z-index: 998;
}

.isRuleShow {
  display: block;
}
.isRuleHide {
  display: none;
}
.float {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  top: 0;
  left: 0;
  /* margin-top:80rpx; */
}
.iconuse {
  margin-left: 11rpx;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}
.use{
  position: relative;
}
.iconuse text{
  font-size: 24rpx;
}
.symbol{
  display: inline;
  position: absolute;
  right: 0;
  text-align: right;
  background: white;
  margin-right: 120rpx;
  font-size: 24rpx;
}
.iconprice {
  margin-left: 11rpx;
}
.animation-element {
  width: 90%;
  height: 1175rpx;
   background-color: #ffffff; 
  border: 1px solid #f3f0f0;
  position: absolute;
  right: -572rpx;
}
.useage {
  height: 40rpx;
}
.useage li {
  width: 177rpx;
  margin: 5rpx 7rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: inline-block;
  text-align: center;
  border: 1px solid #f3f0f0;
  border-radius: 15rpx;
  font-size: 24rpx;
}
.useage li.active{
  background: #89dcf8;
}
.buttom{
  position: fixed;
  bottom: 0;
}
.animation-reset{
float: left;
  line-height: 2;
  width: 260rpx;
  margin: 15rpx 12rpx;
  border: 1px solid #f3f0f0;
  text-align: center;
}
.animation-button{
  float: left;
  line-height: 2;
  width: 260rpx;
  margin: 15rpx 12rpx;
  border: 1rpx solid #f3f0f0;
  text-align: center;
}
.select_button{
  width: 100rpx;
  height: 100%;
  text-align: center;
  border:0rpx;
}