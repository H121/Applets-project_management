.progress-root-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 70rpx;
  line-height: 70rpx;
  width: 100%;
  background: #ffffff;
  border: 2rpx solid #fbfbfb;
  position: relative;
}

.text {
  position: absolute;
}

.progress-max {
  position: absolute;
  left: 192rpx;
  height: 24rpx;
  width: 428rpx;
  border-radius: 30rpx;
  background: #eef1f8;
  z-index: 10;
}

.progress-current {
  position: absolute;
  left: 192rpx;
  height: 24rpx;
  width: 428rpx;
  background: #59B0FF;
  border-radius: 30rpx;
  z-index: 20;
}

.pencent-text {
  font-size: 28rpx;
  color: #59b0ff;
